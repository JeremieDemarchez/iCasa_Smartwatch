			<artifactId>fuchsia-gogo-shell</artifactId>
			<version>0.0.5-SNAPSHOT</version>
		</dependency>

		<!-- PORT COM -->
		<dependency>
			<groupId>com.neuronrobotics</groupId>
			<artifactId>nrjavaserial</artifactId>
